{
    "input_transforms": [
        {
            "name": "Spectrogram",
            "parameters": {
                "n_fft": 512,
                "hop_length": 128,
                "window_fn": "sqrt_hann_window",
                "power": 1.0,
                "window_scaling": true
            }
        }
    ],

    "separator": {
        "model": "BLSTMSpectrogramSeparator",
        "input_transforms": [
            {
                "name": "AmplitudeToDB",
                "parameters": {
                    "stype": "magnitude"
                }
            }
        ],
        "parameters": {
            "n_bins": 257,
            "n_layers": 3,
            "hidden_dim": 600,
            "bias": true
        }
    },


    "classifier": {
        "model": "CRNNSpectrogramClassifier",
        "parameters": {
            "n_bins": 257,
            "blstm_hidden_dim": 100,
            "conv_kernel_size": 5,
            "num_input_channels": 1,
            "bias": true,
            "pooling": null
        },
        "input_transforms": [
            {
                "name": "AmplitudeToDB",
                "parameters": {}
            }
        ],

        "trainable": false,
        "pretrained_path": "/scratch/jtc440/cdsd/models/pishdadian2020_crnn_classifier/classifier_best.pt"
    },

    "losses": {
        "mixture": {
            "name": "mixture_loss",
            "margin": 0.5,
            "weight": 100.0,
            "energy_masking": true
        },
        "classification": {
            "weight": 1.0
        }
    },

    "training": {
        "batch_size": 8,
        "num_epochs": 50,
        "label_mode": "frame",
        "optimizer": {
            "name": "Adam",
            "parameters": {
                "lr": 0.0001
            }
        }
    }

}
